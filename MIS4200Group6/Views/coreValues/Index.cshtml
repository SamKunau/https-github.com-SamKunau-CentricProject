@model IEnumerable<MIS4200Group6.Models.CoreValue>

@{
    ViewBag.Title = "Index";
}

<h2>Recognize an Employee!</h2>
<p>Need some help figuring out what to recognize someone for? Check out info on our Core Values <a href="http://cob.ohio.edu/mis4200Team6/Home/About/">Click Here</a></p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:black">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.award)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognizer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognized)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognizationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.award)
        </td>
        <td>
            @Html.DisplayFor(model => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recognizer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recognized)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recognizationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
